# ⚠️ BACKEND-ONLY VARIABLES - DO NOT PREFIX WITH NEXT_PUBLIC_
# These variables are sensitive and should never be exposed to the frontend

# Smart Contract Deployment
PRIVATE_KEY=your_private_key_here
BASE_RPC_URL=https://mainnet.base.org
BASE_TESTNET_RPC_URL=https://sepolia.base.org
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
BASESCAN_API_KEY=your_basescan_api_key

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/duration_finance
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis (for caching and notifications)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your_redis_token

# ✅ FRONTEND-SAFE VARIABLES - These can be exposed to the client
# Variables prefixed with NEXT_PUBLIC_ are automatically included in the frontend bundle

# MiniKit / OnchainKit Configuration
NEXT_PUBLIC_ONCHAINKIT_API_KEY=your_onchainkit_api_key
NEXT_PUBLIC_ONCHAINKIT_PROJECT_NAME=Duration.Finance
NEXT_PUBLIC_URL=https://your-app-domain.com
NEXT_PUBLIC_ICON_URL=https://your-app-domain.com/icon.png

# Farcaster Frame Configuration
FARCASTER_HEADER=base64_encoded_header
FARCASTER_PAYLOAD=base64_encoded_payload
FARCASTER_SIGNATURE=signature_from_manifest_generation

# Frame Metadata
NEXT_PUBLIC_APP_ICON=https://your-app-domain.com/icon.png
NEXT_PUBLIC_APP_SUBTITLE=Decentralized Options Protocol
NEXT_PUBLIC_APP_DESCRIPTION=Fully-collateralized options with 1inch settlement
NEXT_PUBLIC_APP_SPLASH_IMAGE=https://your-app-domain.com/splash.png
NEXT_PUBLIC_SPLASH_BACKGROUND_COLOR=#1E40AF
NEXT_PUBLIC_APP_PRIMARY_CATEGORY=finance
NEXT_PUBLIC_APP_HERO_IMAGE=https://your-app-domain.com/hero.png
NEXT_PUBLIC_APP_TAGLINE=Trade Options with Full Collateralization
NEXT_PUBLIC_APP_OG_TITLE=Duration.Finance - Decentralized Options
NEXT_PUBLIC_APP_OG_DESCRIPTION=Trade fully-collateralized options with 1inch settlement on Base
NEXT_PUBLIC_APP_OG_IMAGE=https://your-app-domain.com/og-image.png

# Contract Addresses (deployed contracts)
NEXT_PUBLIC_DURATION_TOKEN_ADDRESS=0x...
NEXT_PUBLIC_DURATION_OPTIONS_ADDRESS=0x...
NEXT_PUBLIC_SETTLEMENT_ROUTER_ADDRESS=0x...

# 1inch Integration (BACKEND-ONLY)
ONEINCH_API_KEY=your_1inch_api_key
ONEINCH_API_URL=https://api.1inch.dev

# Security (BACKEND-ONLY)
JWT_SECRET=your_jwt_secret_for_api_auth
ENCRYPTION_KEY=your_32_character_encryption_key

# Development
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development