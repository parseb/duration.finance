{
  "name": "duration-finance",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    
    "docker:dev": "docker compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker compose -f docker-compose.dev.yml up --build -d",
    "docker:dev:logs": "docker compose -f docker-compose.dev.yml logs -f",
    "docker:dev:stop": "docker compose -f docker-compose.dev.yml stop",
    "docker:dev:down": "docker compose -f docker-compose.dev.yml down",
    "docker:dev:restart": "docker compose -f docker-compose.dev.yml restart",
    "docker:dev:status": "docker compose -f docker-compose.dev.yml ps",
    
    "docker:prod": "docker compose up -d",
    "docker:prod:build": "docker compose up --build -d",
    "docker:prod:logs": "docker compose logs -f",
    "docker:prod:stop": "docker compose stop",
    "docker:prod:down": "docker compose down",
    "docker:prod:restart": "docker compose restart",
    "docker:prod:status": "docker compose ps",
    
    "docker:infra": "docker compose -f docker-compose.dev.yml up postgres redis -d",
    "docker:infra:stop": "docker compose -f docker-compose.dev.yml stop postgres redis",
    
    "containers:clean": "docker compose -f docker-compose.dev.yml down -v && docker compose down -v",
    
    "db:init": "psql $DATABASE_URL -f database/init.sql",
    "db:schema": "psql $DATABASE_URL -f database/schema.sql",
    "db:reset": "npm run db:schema"
  },
  "dependencies": {
    "@coinbase/onchainkit": "latest",
    "@farcaster/frame-sdk": "^0.0.60",
    "@upstash/redis": "^1.34.4",
    "next": "^15.3.3",
    "react": "^18",
    "react-dom": "^18",
    "@tanstack/react-query": "^5",
    "viem": "^2.27.2",
    "wagmi": "^2.14.11",
    "pino-pretty": "^13.0.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/pg": "^8.12.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^8",
    "eslint-config-next": "15.3.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.5.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}